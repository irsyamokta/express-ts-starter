{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@app": ["../src/app.ts"],
      "@api/*": ["./api/*"],
      "@errors/*": ["./error/*"],
      "@config/*": ["./config/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@modules/*": ["./modules/*"],
      "@utils/*": ["./utils/*"],
      "@swagger": ["../swagger.ts"]
    }
  },
  "include": [
    "src/**/*",
    "swagger.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}